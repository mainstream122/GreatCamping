<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CampingPlaceDao">
	<select id="selectOneCampingPlace" resultType="CampingPlaceVO" parameterType="_int">
		SELECT  CAMPING_PLACE_ID campingPlaceId
				,    CMP_PLC_NM cmpPlcNm
		        ,    LATITUDE latitude
		        ,    LONGITUDE longitude
		        ,    NEW_FULL_ADDRESS newFullAddress
		        ,    OLD_FULL_ADDRESS oldFullAddress
		        ,    TEL_NO telNo
		        ,    HMPG_ADDRESS hmpgAddress
		        ,    AREA area
		        ,    MAXIMUM_CAPACITY maximumCapacity
		        ,    USE_HOURS useHours
		        ,    CHARGE charge
		        ,    FAC_TOILET facToilet
		        ,    FAC_SINK facSink
		        ,    FAC_SHOWERROOM facShowerroom
		        ,    FAC_WIFI facWifi
		        ,    FAC_STORE facStore
		        ,    FAC_BBQ facBbq
		        ,    FAC_ELECTRIC facElectric
		        ,    FAC_CARAVAN facCaravan
		        ,    FAC_GLAMPING facGlamping
		        ,    FAC_TENT facTent
		        ,    FAC_PET facPet
		        ,    REGION_ID regionId
		        ,	 SUB_REGION_ID subRegionId
		FROM CAMPING_PLACE
		WHERE CAMPING_PLACE_ID = #{campingPlaceId}
	</select>
	<select id="selectAllCampingPlace" resultType="CampingPlaceVO">
		SELECT  CAMPING_PLACE_ID campingPlaceId
				,    CMP_PLC_NM cmpPlcNm
		        ,    LATITUDE latitude
		        ,    LONGITUDE longitude
		        ,    NEW_FULL_ADDRESS newFullAddress
		        ,    OLD_FULL_ADDRESS oldFullAddress
		        ,    TEL_NO telNo
		        ,    HMPG_ADDRESS hmpgAddress
		        ,    AREA area
		        ,    MAXIMUM_CAPACITY maximumCapacity
		        ,    USE_HOURS useHours
		        ,    CHARGE charge
		        ,    FAC_TOILET facToilet
		        ,    FAC_SINK facSink
		        ,    FAC_SHOWERROOM facShowerroom
		        ,    FAC_WIFI facWifi
		        ,    FAC_STORE facStore
		        ,    FAC_BBQ facBbq
		        ,    FAC_ELECTRIC facElectric
		        ,    FAC_CARAVAN facCaravan
		        ,    FAC_GLAMPING facGlamping
		        ,    FAC_TENT facTent
		        ,    FAC_PET facPet
		        ,    REGION_ID regionId
		        ,	 SUB_REGION_ID subRegionId
		FROM CAMPING_PLACE
	</select>
	<select id="selectCampingPlaceByRegionId" parameterType="CampingPlaceSearchVO" resultType="CampingPlaceVO">
		<include refid="Paging.header"></include>
		SELECT  CAMPING_PLACE_ID campingPlaceId
				,    CMP_PLC_NM cmpPlcNm
		        ,    LATITUDE latitude
		        ,    LONGITUDE longitude
		        ,    NEW_FULL_ADDRESS newFullAddress
		        ,    OLD_FULL_ADDRESS oldFullAddress
		        ,    TEL_NO telNo
		        ,    HMPG_ADDRESS hmpgAddress
		        ,    AREA area
		        ,    MAXIMUM_CAPACITY maximumCapacity
		        ,    USE_HOURS useHours
		        ,    CHARGE charge
		        ,    FAC_TOILET facToilet
		        ,    FAC_SINK facSink
		        ,    FAC_SHOWERROOM facShowerroom
		        ,    FAC_WIFI facWifi
		        ,    FAC_STORE facStore
		        ,    FAC_BBQ facBbq
		        ,    FAC_ELECTRIC facElectric
		        ,    FAC_CARAVAN facCaravan
		        ,    FAC_GLAMPING facGlamping
		        ,    FAC_TENT facTent
		        ,    FAC_PET facPet
		        ,    REGION_ID regionId
		        ,	 SUB_REGION_ID subRegionId
		FROM CAMPING_PLACE
		WHERE REGION_ID = #{regionId}
		<if test="subRegionId != null and subRegionId != ''">
			AND SUB_REGION_ID = #{subRegionId}
		</if>
		ORDER BY cmpPlcNm
		<include refid="Paging.footer"></include>
	</select>
	<select id="selectCampingPlaceByRegionIdAllCount" parameterType="CampingPlaceSearchVO" resultType="_int">
		SELECT  COUNT(1)
		FROM CAMPING_PLACE
		WHERE REGION_ID = #{regionId}
		<if test="subRegionId != null and subRegionId != ''">
			AND SUB_REGION_ID = #{subRegionId}
		</if>
	</select>
</mapper>