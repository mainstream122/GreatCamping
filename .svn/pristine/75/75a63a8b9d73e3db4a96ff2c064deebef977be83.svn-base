@charset "UTF-8";
* {
	box-sizing: border-box;
	font-family: dotum;
}

.SignUpWrapper {
	width: 805px;
}





.signUPTitle{
	height: 45px;
    margin: 0;
    padding: 0 0 0 30px;
    font-weight: bold;
    font-size: 18px;
    line-height: 3;
    color: #723f03;
    background: #feb500;
    margin-bottom: 50px;
    
}

.inputForm {
	list-style: none;
	display: block;
	margin-left: 40px;
}

.inputForm>li {
	border-top: 1px solid #e9e2d7;
	padding: 10px 0;
	font-weight: 700;
}

.inputForm > li:last-child {
	border-bottom: 1px solid #e9e2d7;	
}

button, input, textarea {
    margin: 0;
    outline: none;
    color: #444;
}

input[type='text'], input[type='password'] {
	width: 190px;
	height: 25px;
    border: 1px solid #d6cdcd;
    padding: 4px 3px;
    text-indent: 3px;
}

.inputForm>li label {
	display: inline-block;
	width: 93px;
	font-size: 0.8rem;
	
}

.addressSearch{
	display: inline-block;	
}

#address, #addressDetail {
	margin-top: 10px;
	width: 300px;
}
label[for='addressName'] {
	vertical-align: top;
}

input[type='button'] {
	margin-left: 10px;
	padding: 6px 12px;
	border: 0;
	vertical-align: middle;
	background-color: #ff6600;
	color: #fff;
	cursor: pointer;
	font-weight: 700;
}

input[type='submit'] {
	margin-left: 10px;
	padding: 6px 12px;
	border: 0;
	vertical-align: middle;
	background-color: #ff6600;
	color: #fff;
	cursor: pointer;
	font-weight: 700;
}

.privacy-agree {
	margin-top: 50px;
}

.privacy-agree h2 {
	font-size: 1rem;
    font-weight: bold;
}

.privacy-agree > h2 {
	margin: 0;
    padding: 0 0 10px 30px;
    font-size: 1rem;
    font-weight: bold;
}

.privacy-agree > .cont {
    overflow: hidden;
    overflow-y: scroll;
    height: 120px;
    margin: 0;
    padding: 30px 30px 30px 30px;
    border: 1px solid #ebebeb;
    border-width: 1px 1px 0 1px;
    font-size: 0.8rem;
}

.agreeCheck {
	margin: 0;
    padding: 10px 30px;
    background-color: #efe9e9;
    font-size: 0.8rem;
}

input[type='checkbox'] {
	vertical-align: middle;
}

.signUpinfo {
	font-size: 0.8rem;
	font-weight: 700;
	text-align: center;
}

#signUpSubmit {
	display: block;
	margin: 0 auto;
}
    