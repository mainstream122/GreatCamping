@charset "UTF-8";

#loginLayer {
	display: none;
	overflow: hidden;
    position: fixed;
    left: 50%;
    top: 50%;
    z-index: 2001;
    width: 468px;
    height: 355px;
    margin: -204px 0 0 -234px;
    padding: 0;
    background-color: #fff;
    box-sizing: border-box;
}

.wrap {
    position: relative;
}

#loginLayer h2{
	margin-bottom: 27px;
	overflow: hidden;
	height: 53px;
	padding: 0;
	color: #fff;
	text-align: center;
	line-height: 53px;
	background: #992e00;
	font-weight: 500;
	font-size: 20px;
}

#txt span {
	color: #ff6600;
	font-weight: bold;
}
#txt{
	text-align: center;
	font-size: 13px
}

.padding{
	font-weight: bold;
	margin-top: 20px;
	font-size: 13px;
}

.padding input {
	width: 240px;
    height: 38px;
    margin: 0;
    padding: 2px;
    border: 1px solid #a7a7a7;
    background-color: #fff;
    box-sizing: border-box;
    margin-left: 28px;
}


.pw{
	margin-top: 9px;
	font-weight: bold;
    font-size: 13px;
}

.pw input {
    width: 235px;
    height: 33px;
    margin: 0;
    padding: 2px;
    border: 1px solid #a7a7a7;
    background-color: #fff;
    margin-left: 15px;
}
.login-email{
	position: relative;
    width: 446px;
    height: 113px;
    margin: 0 auto;
    padding: 0;
}
.submit {
	position: absolute;
	top: 0px;
	right: 0px;
    width: 115px;
    height: 84px;
    text-align: center;
}
.Btn {
	display: inline-block;
    width: 100%;
    height: 89px;
	position:relative;
	line-height: 84px;
    background-color: #b43f0a;
    font-size: 1.2em;
    color: #ffffff;
    font-weight: bold;
    letter-spacing: -1px;
    border: 1px solid #000;
    right: 0;
    top: 0;
    text-align: center;
    cursor: pointer;
}

.submit a {
	text-decoration:none;
}

.line {
	border-top: 2px solid #000;
	width: 471px;

}

.etc {
    width: 468px;
    margin-top: 20px;
    border: 1px solid #e7e7e7;
    padding: 10px
}

.go-idpwd {
	border: 1px solid #b1b1b1;
	padding: 7px 30px;
}

.etc a {
	text-decoration:none;
	text-align: center;
    font-size: 12px;
    margin-left: 30px;
}

.go-join {
	border: 1px solid #ff0000;
	color: #ff0000;
    padding: 7px 65px;
}

#doLoginForm {
	margin-bottom: 0;
}

.close-login {
    position: absolute;
    top: 16px;
    right: 10px;
    cursor: pointer;
}

#idPwFalse{
	display: none;
	padding-left: 80px; 
	margin-top: 0;
	margin-bottom: 5px;
	color: #f41010;
	font-weight: 700;
	font-size: 1rem;
}